<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    tools:context="com.example.administrator.anew.UI.Fragment.PersonageFragment">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_mine_myInfo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/common_selector">

        <com.example.administrator.anew.UI.wight.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_photo_into"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/head"
            app:border_color="#ccc"
            app:border_width="5dp"
            />

        <com.example.administrator.anew.UI.wight.FontTextView
            android:id="@+id/tv_mine_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Zerlindar"
            app:font_path="font/cute.ttf"
            android:textSize="23dp" />
    </RelativeLayout>

    <View style="@style/splitLine" />
    <com.example.administrator.anew.UI.wight.FontTextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_mine_friendCycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/common_selector"
        android:drawableLeft="@mipmap/mine_friendcircle"
        android:drawablePadding="40dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="签名"
        app:font_path="font/cute.ttf"
        android:textSize="17dp" />
    <View style="@style/splitLine" />
    <com.example.administrator.anew.UI.wight.FontTextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_mine_pillBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/common_selector"
        android:drawableLeft="@mipmap/mine_pillbox"
        android:drawablePadding="40dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="我的下载"
        app:font_path="font/cute.ttf"
        android:textSize="17dp" />

    <View style="@style/splitLine" />
    <com.example.administrator.anew.UI.wight.FontTextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_mine_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/common_selector"
        android:drawableLeft="@mipmap/mine_pillbox"
        android:drawablePadding="40dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="登录"
        android:textSize="17dp"
        app:font_path="font/cute.ttf"/>
    <View style="@style/splitLine" />
    <com.example.administrator.anew.UI.wight.FontTextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_mine_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/common_selector"
        android:drawableLeft="@mipmap/mine_feedback"
        android:drawablePadding="40dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="退出"
        app:font_path="font/cute.ttf"
        android:textSize="17dp" />

</LinearLayout>
</ScrollView>